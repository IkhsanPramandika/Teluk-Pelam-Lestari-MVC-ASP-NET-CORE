@model IEnumerable<Admin.Models.Karir>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Karir";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Karir</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Additional styles -->
    <style>
        /* Add any additional styles here */
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tabel Karir</h6>
            </div>
            <div class="text-right card-header">
                <a asp-action="Create" class="btn btn-success btn-sm btn-create">Create</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-center" id="karirTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nama</th>
                                <th>Email</th>
                                <th>Jabatan</th>
                                <th>Berkas</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nama)</td>
                                    <td>@Html.DisplayFor(modelItem => item.email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Jabatan)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Berkas))
                                        {
                                            <a href="@Url.Content("~/path/to/your/pdfs/" + item.Berkas)" target="_blank">
                                                @item.Berkas
                                            </a>
                                        }
                                        else
                                        {
                                            <span>No file available</span>
                                        }
                                    </td>

                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-action">
                                            <i class="fas fa-trash-alt"></i> Tolak
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-action">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success btn-sm btn-action">
                                            <i class="fas fa-edit"></i> Terima
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Additional scripts if needed -->
</body>
</html>
